NODE_ENV=development
PORT=5000

# MongoDB Atlas
# Get your connection string from MongoDB Atlas:
# 1. Create account at https://www.mongodb.com/cloud/atlas
# 2. Create a cluster
# 3. Add database user
# 4. Whitelist your IP
# 5. Get connection string and replace values below
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/backend_assignment?retryWrites=true&w=majority

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# API
API_VERSION=v1
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

############# HTTP / CORS ################
# Comma-separated list of allowed origins (no spaces)
CORS_ORIGIN=http://localhost:3000
# Base URL for generating absolute links (Swagger etc.)
BASE_URL=http://localhost:5000

############# Docs ################
# In production, set to false unless intentionally exposing docs
ENABLE_SWAGGER=true
